<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/lightgrey"
                    android:padding="3dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_items"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Item Name"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:layout_weight=".5"
                        android:textColor="@color/textcolor"/>

                    <TextView
                        android:id="@+id/tv_itemname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="abcdefgh"
                        android:layout_weight=".5"
                        android:gravity="left"
                        android:layout_marginRight="10dp"
                        android:textSize="12dp"
                        android:textColor="@color/textcolor"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/lightgrey"
                    android:padding="3dp"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Varient Name"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:layout_weight=".5"
                        android:textColor="@color/textcolor"/>

                    <TextView
                        android:id="@+id/tv_varientname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="abcdefgh"
                        android:layout_weight=".5"
                        android:gravity="left"
                        android:layout_marginRight="10dp"
                        android:textSize="12dp"
                        android:textColor="@color/textcolor"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_avalqty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Batch No."
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:layout_weight=".5"
                        android:textColor="@color/textcolor"/>
                    <TextView
                        android:id="@+id/tv_batchno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="abcdefgh"
                        android:layout_weight=".5"
                        android:gravity="left"
                        android:layout_marginRight="10dp"
                        android:textSize="12dp"
                        android:textColor="@color/textcolor"/>
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Expire Date."
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:layout_weight=".5"
                        android:textColor="@color/textcolor"/>

                    <TextView
                        android:id="@+id/tv_expiredate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="abcdefgh"
                        android:layout_weight=".5"
                        android:gravity="left"
                        android:layout_marginRight="10dp"
                        android:textSize="12dp"
                        android:textColor="@color/textcolor"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Requested Quantity."
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:layout_weight=".5"
                        android:textColor="@color/textcolor"/>

                    <TextView
                        android:id="@+id/tv_reqqty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="abcdefgh"
                        android:layout_weight=".5"
                        android:gravity="left"
                        android:layout_marginRight="10dp"
                        android:textSize="12dp"
                        android:textColor="@color/textcolor"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_genavalqty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Available Quentity"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:layout_weight=".5"
                        android:textColor="@color/green"/>

                    <EditText
                        android:id="@+id/edt_avlqty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:gravity="left"
                        android:layout_marginRight="20dp"
                        android:textSize="11dp"
                        android:padding="3dp"
                        android:background="@drawable/background_card"
                        android:textColor="@color/textcolor"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>