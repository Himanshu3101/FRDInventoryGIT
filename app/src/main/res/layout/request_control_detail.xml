<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/colorPrimaryDark"
        android:minHeight="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/img_back"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:background="@color/transparent" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="start"
                    android:layout_marginTop="08dp"
                    android:background="@mipmap/back"
                    android:scaleType="fitXY" />
            </FrameLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Request Control Detail"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/languageChangeRCD"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:background="@color/transparent" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:background="@mipmap/language_change"
                    android:scaleType="fitXY" />
            </FrameLayout>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:id="@+id/topItems"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".23"
                android:text="@string/scan_pick"
                android:textColor="@color/black"
                android:textSize="12sp"
                />

            <android.support.v7.widget.AppCompatAutoCompleteTextView
                android:id="@+id/scanQR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".11"
                android:textColor="@color/black"
                android:textSize="10sp"/>

            <CheckBox
                android:id="@+id/checkUpdateQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:visibility="gone"
                android:checked="false"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".11"
                    android:gravity="start"
                    android:padding="3dp"
                    android:text="Requisition No:"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/reqNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".12"
                    android:gravity="start"
                    android:padding="3dp"
                    android:text="12345678987"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".13"
                    android:layout_marginLeft="03dp"
                    android:gravity="start"
                    android:padding="3dp"
                    android:text="Date:"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"/>
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/rcd_Date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".12"
                    android:layout_marginLeft="03dp"
                    android:gravity="start"
                    android:padding="3dp"
                    android:singleLine="true"
                    android:text="15/04/2019"
                    android:textColor="@color/black"
                    android:textSize="10sp" />


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:gravity="start"
                    android:text="Shipped To:"
                    android:padding="3dp"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/branchName_RCD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".12"
                    android:layout_marginLeft="03dp"
                    android:gravity="start"
                    android:text="Noida"
                    android:textColor="@color/black"
                    android:textSize="10sp" />


                <TextView
                    android:id="@+id/textView_preparedBy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginLeft="5dp"
                    android:layout_weight=".1"
                    android:gravity="start"
                    android:padding="3dp"
                    android:text="Created by:"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    />
                <TextView
                    android:id="@+id/textVuew_preparedBy_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_weight=".115"
                    android:gravity="end"
                    android:padding="3dp"
                    android:singleLine="true"
                    android:text="ABCDEFG"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

            </LinearLayout>
