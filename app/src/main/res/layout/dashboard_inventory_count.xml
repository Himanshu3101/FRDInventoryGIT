<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/mainheader"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        tools:ignore="MissingConstraints"
        android:background="@color/colorPrimary">
        <!--<ImageView-->
        <!--android:id="@+id/swtch_View"-->
        <!--android:layout_width="30dp"-->
        <!--android:layout_height="30dp"-->
        <!--android:layout_centerInParent="true"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_marginLeft="7dp" -->
        <!--android:padding="3dp"-->
        <!--android:layout_marginBottom="5dp"/>-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Inventory Counting"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/img_logoutCount"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="7dp"
            android:padding="3dp"
            android:layout_marginBottom="5dp"
            android:src="@mipmap/logout_icon"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="5dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <android.support.v7.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:elevation="3dp"
            android:focusableInTouchMode="true"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="5dp">
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/bookSelection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bookselect"
                        android:textSize="14sp"
                        android:fontFamily="@font/opensans_light"
                        android:editable="false"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textColor="@color/textcolor"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:padding="2dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="vertical">

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/spinnerBook"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:textColorHint="#757575"
                            android:textColor="#3e3e3e"
                            android:text="Fast Food"
                            android:textSize="12sp"
                            android:padding="05dp"
                            android:typeface="serif"
                            android:fontFamily="@font/opensans_light"
                            android:background="@drawable/spinner_border_color"
                            />
                        <!--<Spinner-->
                            <!--android:id="@+id/spinnerBook"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:dropDownWidth="367dp"-->
                            <!--android:gravity="left"-->
                            <!--android:text="20kg"/>-->

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/describe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:layout_below="@+id/bookSelection">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/desc"
                        android:textSize="14sp"
                        android:fontFamily="@font/opensans_light"
                        android:editable="false"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:textColor="@color/textcolor"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:padding="2dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="vertical">

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/describeEdit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:textColorHint="#757575"
                            android:textColor="#3e3e3e"
                            android:textSize="12sp"
                            android:padding="05dp"
                            android:typeface="serif"
                            android:fontFamily="@font/opensans_light"
                            android:background="@drawable/spinner_border_color"
                            />

                    </LinearLayout>

                </LinearLayout>

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_below="@+id/describe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <com.yoeki.kalpnay.frdinventry.custom_control.Custom_Button
                        android:id="@+id/submitBook"
                        android:layout_marginTop="20dp"
                        android:background="@color/colorPrimary"
                        android:textColor="#ffffff"
                        android:layout_width="100dp"
                        android:textSize="15sp"
                        android:textAlignment="center"
                        android:layout_marginBottom="20dp"
                        android:layout_height="40dp"
                        android:text="Create"/>


                </android.support.v7.widget.LinearLayoutCompat>

            </RelativeLayout>



        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v7.widget.LinearLayoutCompat>





