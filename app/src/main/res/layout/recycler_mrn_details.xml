                        &lt;!&ndash;android:textColor="@color/textcolor"/>&ndash;&gt;

                        </LinearLayout>-->


                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>

