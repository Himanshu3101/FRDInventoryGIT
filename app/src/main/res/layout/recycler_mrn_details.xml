                            android:orientation="horizontal">-->
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Received qty:"
                                android:textSize="12sp"
                                android:gravity="start"
                                android:layout_weight=".1"
                                android:textColor="@color/textcolor"/>

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tv_receivedqty"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight=".12"
                                android:paddingTop="02dp"
                                android:paddingLeft="05dp"
                                android:gravity="start"
                                android:text="20"
                                android:textSize="10sp"
                                android:textColor="@color/textcolor"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:layout_marginBottom="05dp"
                            android:orientation="horizontal">
                            <!-- <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">-->

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Expiry Date:"
                                android:textSize="12sp"
                                android:layout_weight=".1"
                                android:textColor="@color/textcolor"/>

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tv_expiryDateMRN"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight=".1"
                                android:gravity="start"
                                android:text="201"
                                android:textSize="10sp"
                                android:textColor="@color/textcolor"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Scan Qty.:"
                                android:textSize="12sp"
                                android:layout_weight=".1"
                                android:layout_marginTop="02dp"
                                android:textColor="@color/textcolor"/>

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tv_scanqty"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight=".12"
                                android:gravity="start"
                                android:paddingLeft="05dp"
                                android:text="0"
                                android:textSize="10sp"
                                android:textColor="@color/textcolor"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:layout_marginBottom="05dp"
                            android:orientation="horizontal">
                            <!-- <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">-->

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Configuration:"
                                android:textSize="12sp"
                                android:layout_weight=".1"
                                android:textColor="@color/textcolor"/>

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tv_configurationMRN"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight=".04"
                                android:gravity="start"
                                android:text="201"
                                android:textSize="10sp"
                                android:textColor="@color/textcolor"/>



                        </LinearLayout>

